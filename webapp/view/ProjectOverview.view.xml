<mvc:View controllerName="ui5staffingapp.controller.ProjectOverview"
    height="100%"
    xmlns="sap.gantt.simple"
    xmlns:axistime="sap.gantt.axistime"
    xmlns:config="sap.gantt.config"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:shapes="sap.gantt.simple.shapes"
    xmlns:table="sap.ui.table"
    xmlns:rm="sap.ui.table.rowmodes">
	<GanttChartContainer>
		<toolbar>
			<ContainerToolbar showDisplayTypeButton="true" showBirdEyeButton="true"	id="containerToolbar"/>
		</toolbar>
		<GanttChartWithTable id="gantt1" 
			shapeDrop="onShapeDrop"
			shapeResize="onShapeResize"
			shapeContextMenu="onShapeContextMenu"
			shapeConnect="onShapeConnect"
			showTextOnGhost="true"
			shapeSelectionMode="MultiWithKeyboardAndLasso">
			<axisTimeStrategy>
				<axistime:ProportionZoomStrategy>
					<axistime:totalHorizon>
						<config:TimeHorizon
							startTime="20220501000000" endTime="20260901000000"/>
					</axistime:totalHorizon>
					<axistime:visibleHorizon>
						<config:TimeHorizon
							startTime="20220501000000" endTime="20260601000000"/>
					</axistime:visibleHorizon>
				</axistime:ProportionZoomStrategy>
			</axisTimeStrategy>
			<table>
				<table:Table
					id="ganttTable"
					selectionMode="Single"
					selectionBehavior="RowSelector"
					enableColumnReordering="true"
					rows="{ path: 'projectAssignment>/PersonProject', parameters: { $expand: '_Person' } }">
					<table:columns>
						<table:Column label="UserName">
							<table:template>
								<m:Text text="{projectAssignment>_Person/FirstName} {projectAssignment>_Person/LastName}"/>
							</table:template>
						</table:Column>
						<table:Column label="StartDate">
							<table:template>
								<m:DatePicker dateValue="{projectAssignment>DateStarted}"/>
							</table:template>
						</table:Column>
						<table:Column label="EndDate" >
							<table:template>
								<m:DatePicker dateValue="{projectAssignment>DateEnded}"/>
							</table:template>
						</table:Column>
					</table:columns>
					<table:rowMode>
						<rm:Auto minRowCount="12"/>
					</table:rowMode>
					<table:rowSettingsTemplate>
						<GanttRowSettings rowId="{projectAssignment>_Person/FirstName}{projectAssignment>_Person/LastName}">
							<shapes1>
								<BaseRectangle 
									title="{projectAssignment>_Person/FirstName} {projectAssignment>_Person/LastName}"
									tooltip="{projectAssignment>_Person/FirstName} {projectAssignment>_Person/LastName}"
									fill="#0092D1"
									selectedFill="#0955d9"
									fontSize="15"
									fontWeight="bold"
									selectedTitleColor="#F7ADCD"				
									hoverable="true"
									height="19"
									titleSpacing="20"
									horizontalTextAlignment="Dynamic"
									verticalTextAlignment="Center"
									time="{projectAssignment>DateStarted}" selectable="true" countInBirdEye="true" connectable="true" shapeId="{}"
									draggable="true" resizable="true" endTime="{projectAssignment>DateEnded}"/>
							</shapes1>
						</GanttRowSettings>
					</table:rowSettingsTemplate>
				</table:Table>
			</table>
		</GanttChartWithTable>
	</GanttChartContainer>
</mvc:View>